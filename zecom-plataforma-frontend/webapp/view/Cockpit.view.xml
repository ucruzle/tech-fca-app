<mvc:View xmlns:core="sap.ui.core" 
		  xmlns:mvc="sap.ui.core.mvc" 
	      xmlns="sap.m" 
		  xmlns:f="sap.ui.layout.form" 
		  xmlns:l="sap.ui.layout" 
		  displayBlock="true"
		  class="sapUiSizeCompact"
		  controllerName="sap.ecom.plataforma.controller.Cockpit">
	
	<Page title="Cockpit" showHeader="true" showNavButton="false">
		<content>
	
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Vendas" subheader=""
				press="onListaVendas">
				<TileContent
					footer="Cria novo pedido de venda e consulta pedidos cadastrados">
					<ImageContent src="sap-icon://sales-order"/>
				</TileContent>
			</GenericTile>
	
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Status" subheader="" 
				press="onListaStatusPedidosDeVendas">
				<TileContent footer="Consulta status de pedidos de vendas realizados">
					<ImageContent src="sap-icon://order-status"/>
				</TileContent>
			</GenericTile>

			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Produtos" subheader="" 
				press="onListaProdutos">
				<TileContent
					footer="Cadastro e consulta de produtos utilizados nos pedidos de vendas">
					<ImageContent src="sap-icon://product"/>
				</TileContent>
			</GenericTile>

			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Parceiros" subheader=""
				press="onListaParceiros">
				<TileContent footer="Cadastro e consultas de parceiros comerciais">
					<ImageContent src="sap-icon://account"/>
				</TileContent>
			</GenericTile>
			
